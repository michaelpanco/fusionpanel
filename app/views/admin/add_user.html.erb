<div class="container">
<%= form_tag(create_user_path, method: "POST", :class=>"form-signin") do %>

	<% if flash[:create_error] %>
 		<ul>
    <% flash[:create_error].full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>

	<% end %>

	<h2 class="form-signin-heading">Add User</h2>
	<%= text_field_tag("username", params[:username], :placeholder=>"Username",:class=>"input-block-level") %>
	<%= text_field_tag("fullname", params[:fullname], :placeholder=>"Fullname",:class=>"input-block-level") %>
  <%= text_field_tag("email", params[:email], :placeholder=>"Email address",:class=>"input-block-level") %>
	<%= password_field_tag("password", params[:password], :placeholder=>"Password",:class=>"input-block-level") %>
  <%= submit_tag("Add User",:class=>"btn btn-large btn-primary") %>
<% end %>

</div> 
