<div class="container" ng-controller="main">
	<div class="text-center mb20">
		<%= image_tag("fusionpanel_logo.png", alt: "Fusionpanel", width: 360)%>
	</div>
	<%= form_tag(login_connect_path, method: "POST", :class=>"form-signin") do %>

	<% if flash[:error] %>
	<div class="alert alert-error text-center">
		<%= flash[:error] %>
	</div>
	<% end %>
	<h2 class="form-signin-heading fsize14 text-center mt0">Please login in your account</h2>
	<input type="hidden" name="goto" value="<%= @goto %>">
	<%= text_field_tag("username", params[:username], :placeholder=>"Username or Email address",:class=>"input-block-level") %>
	<%= password_field_tag("password", "", :placeholder=>"Password",:class=>"input-block-level") %>
	<div class="row mt10">
		<div class="span2">
			<label class="checkbox"> <%= check_box_tag(:remember) %> Remember me </label>

		</div>
		<div class="span2">
			<%= submit_tag("Login",:class=>"btn btn-large btn-primary pull-right") %>
		</div>
	</div>
	<% end %>
	<div class="forgot-container">
		<a href="#forgot-password-modal" data-no-turbolink="true" data-toggle="modal" data-backdrop="static" data-keyboard="false">Forgot Password?</a>
	</div>
	<div id="forgot-password-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-hidden="true">
		<div class="modal-header">
			<button id="x-close-modal"  type="button" class="close" data-dismiss="modal" aria-hidden="true">
				Ã—
			</button>
			<h3 id="modal-header">Forgot Password</h3>
		</div>

		<div class="modal-body">
			<div class="message-status" ng-bind-html-unsafe="messageForgotStatus"></div>
			<p class="mb20">
				Please enter your email address that you registered with your account. A message will be automatically generated by our server and sent to the e-mail address you entered.
			</p>
			<form name="forgot-account-password" id="forgot-account-password" class="ng-pristine ng-valid" accept-charset="UTF-8">
				<input type="text" class="input-block-level" ng-model="forgotAccountEmail" placeholder="Enter Email Address"  />
			</form>
		</div>

		<div class="modal-footer">
			<a id="forgot-password-cancel" ng-disabled="buttonControl" class="btn btn-large" data-dismiss="modal" aria-hidden="true" ng-click="clearMessageStatus()">Cancel</a>
			<button ng-disabled="buttonControl" type="submit" class="btn btn-primary btn-large" ng-click="forgotPassword('/users/forgotpassword')" >
				Submit
			</button>
		</div>
	</div>

</div>
