<div class="row-fluid">
    <div class="span4">
        <h1><%= params["controller"].capitalize %></h1>
    </div>
    <% if @my_permissions.include?("can_modify_assets") %>
    <div class="span8">
        <div class="pull-right">
            <div class="btn-holder margin0">
                <a href="" ng-click="showDirectoryMaker = ! showDirectoryMaker" class="btn btn-large">Create Directory</a>
            </div>
        </div>
    </div>
    <% end %>
</div>

<% if flash[:error] %>
<div class="alert alert-error">
    <button type="button" class="close" data-dismiss="alert">
        x
    </button>
    <% flash[:error].each do |error_message| %>
    <%= error_message %>
    <br />
    <% end %>
</div>
<% end %>

<% if flash[:notice] %>
<div class="alert alert-success mt15">
    <button type="button" class="close" data-dismiss="alert">
        x
    </button>
    <%= flash[:notice].html_safe %>
</div>
<% end %>
<% if @my_permissions.include?("can_modify_assets") %>
<% form_tag({action: :upload}, multipart: true) do %>
  <%= file_field_tag 'file', :title => 'assdd' %>
 <%= submit_tag 'Upload' %>
<% end %>
<% end %>
<div class="fileitem_wrap">
    <div class="col-md-9">
        <div ng-view></div>
    </div>
</div>